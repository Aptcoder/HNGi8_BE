  <style>
    * {
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: start;
      min-width: 100vw;
      max-width: 100%;
      min-height: 100vh;
      overflow-x: hidden;
    }

    .container nav {
      /* margin: 3rem auto 60px; */
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 4rem;
      color: #7E5AE3;
    }

    nav h4 {
      color: #9272C2;
      margin: 0;
      font-weight: 700;
    }

    nav ul {
      display: flex;
      margin: 0 1rem;
      padding: 0;
      list-style-type: none;
      font-weight: 600;
    }

    nav ul li {
      margin: 0 0.625rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    #userPhoto {
      margin: 0 1.25rem 0 0;
      height: 2rem;
      width: 2rem;
      object-fit: cover;
    }
  </style>